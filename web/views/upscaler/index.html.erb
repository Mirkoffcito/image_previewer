<div data-feature="upscale"
    class="min-h-screen bg-gray-50 dark:bg-gray-900 flex items-center justify-center p-6 transition-colors" 
  >
  <div class="w-full max-w-lg bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8 transition-colors">
    <h2 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-6">
      <span data-index-target="title">Upload an image to Upscale</span>
    </h2>

    <!-- UPSCALER FORM -->
    <form 
      action="/upscale" 
      method="post" 
      enctype="multipart/form-data" 
      class="space-y-6"
      data-controller="shared--form-submit shared--dropzone"
      data-shared--form-submit-mode-value="upscale"
      data-action="submit->shared--form-submit#disableSubmit"
      data-shared--form-submit-target="form"
      data-shared--dropzone-url-value="/upscale"
      data-shared--dropzone-max-filesize-value="256"
    >
      <%= csrf.form_tag %>

      <!-- File input -->
      <div data-shared--dropzone-target="zone" 
          class="border-2 border-dashed rounded-lg p-8 cursor-pointer">
        <img 
          src="public/assets/icons/files-folder.svg" 
          alt="Files icon" 
          class="h-12 w-12 mb-3 filter dark:invert"
        />
        <p class="mb-2 text-gray-700 dark:text-gray-300">
          Drag & drop an image here (or click to browse)
        </p>
        <p class="text-xs text-gray-500 dark:text-gray-400">
          Accepted types: PNG, JPEG, WEBP
        </p>
        <div 
            data-shared--dropzone-target="previews" 
            class="mt-4 space-y-1 text-gray-700 dark:text-gray-300"
          ></div>
      </div>

      <!-- Scale factor -->
      <fieldset class="border border-gray-200 dark:border-gray-700 rounded-lg p-4">
        <legend class="px-2 font-medium text-gray-800 dark:text-gray-100">Scale</legend>
        <div class="flex space-x-4 mt-2">
          <% [1,2,4].each do |factor| %>
            <label class="inline-flex items-center">
              <input 
                type="radio" 
                name="scale" 
                value="<%= factor %>" 
                <%= 'checked' if factor == 2 %> 
                class="form-radio text-blue-600 dark:text-blue-400"
              >
              <span class="ml-2 text-gray-700 dark:text-gray-300"><%= factor %>Ã—</span>
            </label>
          <% end %>
        </div>
      </fieldset>

      <!-- Noise reduction -->
      <fieldset class="border border-gray-200 dark:border-gray-700 rounded-lg p-4">
        <legend class="px-2 font-medium text-gray-800 dark:text-gray-100">Denoise</legend>
        <div class="flex space-x-4 mt-2">
          <% [0,1,2,3].each do |level| %>
            <label class="inline-flex items-center">
              <input 
                type="radio" 
                name="noise" 
                value="<%= level %>" 
                <%= 'checked' if level == 2 %> 
                class="form-radio text-blue-600 dark:text-blue-400"
              >
              <span class="ml-2 text-gray-700 dark:text-gray-300"><%= level %></span>
            </label>
          <% end %>
        </div>
      </fieldset>

      <!-- Tile size -->
      <fieldset class="border border-gray-200 dark:border-gray-700 rounded-lg p-4">
        <legend class="px-2 font-medium text-gray-800 dark:text-gray-100">Tiling (px)</legend>
        <input 
          type="number" 
          name="tile" 
          value="0" 
          min="0" 
          class="w-24 border rounded px-2 py-1 text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800"
        >
        <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
          0 = no tiling; increase if you run out of VRAM
        </p>
      </fieldset>

      <!-- Model selection -->
      <fieldset class="border border-gray-200 dark:border-gray-700 rounded-lg p-4">
        <legend class="px-2 font-medium text-gray-800 dark:text-gray-100">Model</legend>
        <select 
          name="model" 
          class="mt-2 block w-full border rounded px-2 py-1 text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800"
        >
          <option value="models-cunet" selected>Auto (default CUNet)</option>
          <option value="models-upconv_7_photo">Photo upconv</option>
          <option value="models-upconv_7_anime_style_art_rgb">Anime-style</option>
          <option value="models-cunet">CUNet</option>
        </select>
      </fieldset>

      <!-- Output format -->
      <fieldset class="border border-gray-200 dark:border-gray-700 rounded-lg p-4">
        <legend class="px-2 font-medium text-gray-800 dark:text-gray-100">Output Format</legend>
        <div class="flex space-x-4 mt-2">
          <% { png: 'PNG', jpeg: 'JPEG' }.each do |sym,label| %>
            <label class="inline-flex items-center">
              <input 
                type="radio" 
                name="format" 
                value="<%= sym %>" 
                <%= 'checked' if sym == :png %> 
                class="form-radio text-blue-600 dark:text-blue-400"
              >
              <span class="ml-2 text-gray-700 dark:text-gray-300"><%= label %></span>
            </label>
          <% end %>
        </div>
      </fieldset>

      <!-- Submit -->
      <div>
        <button
          type="submit"
          class="w-full bg-blue-600 dark:bg-blue-500 hover:bg-blue-700 dark:hover:bg-blue-600 
                text-white font-semibold py-2 px-4 rounded-lg transition-colors"
          data-shared--form-submit-target="submit"
          data-shared--dropzone-target="submitFiles"
        >
          Upscale Image
        </button>
      </div>
    </form>

  </div>
</div>