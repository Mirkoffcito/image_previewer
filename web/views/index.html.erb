<div 
  class="min-h-screen bg-gray-50 dark:bg-gray-900 flex items-center justify-center p-6 transition-colors" 
  data-controller="index"
>
  <div class="w-full max-w-lg bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8 transition-colors">
    <h2 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-6">
      <span data-index-target="title">Upload an image to Preview</span>
    </h2>

    <!-- TABS -->
    <div class="flex w-full rounded-t-lg overflow-hidden border-b border-gray-200 dark:border-gray-600">
      <!-- Previewer tab -->
      <button
        type="button"
        class="flex-1 px-4 py-3 text-center text-sm font-medium transition-colors focus:outline-none
              hover:bg-gray-100 dark:hover:bg-gray-700
              border-b-2
              data-[active=true]:bg-gray-100 dark:data-[active=true]:bg-gray-700
              data-[active=true]:border-transparent
              data-[active=false]:bg-white dark:data-[active=false]:bg-gray-800
              data-[active=false]:border-gray-200 dark:data-[active=false]:border-gray-600"
        data-action="click->index#switchMode"
        data-index-mode-value="preview"
        data-active="<%= @mode == 'preview' %>"
        data-index-target="tabPreview"
      >
        Previewer
      </button>

      <!-- Converter tab -->
      <button
        type="button"
        class="flex-1 px-4 py-3 text-center text-sm font-medium transition-colors focus:outline-none
              hover:bg-gray-100 dark:hover:bg-gray-700
              border-b-2
              data-[active=true]:bg-gray-100 dark:data-[active=true]:bg-gray-700
              data-[active=true]:border-transparent
              data-[active=false]:bg-white dark:data-[active=false]:bg-gray-800
              data-[active=false]:border-gray-200 dark:data-[active=false]:border-gray-600"
        data-action="click->index#switchMode"
        data-index-mode-value="converter"
        data-active="<%= @mode == 'converter' %>"
        data-index-target="tabConverter"
      >
        Converter
      </button>
    </div>


    <!-- PREVIEW FORM -->
    <form
        action="/preview" 
        method="post" 
        enctype="multipart/form-data" 
        class="space-y-6" 
        data-index-target="previewForm"
        data-action="submit->index#disableSubmit"
        data-controller="shared--dropzone"
        data-shared--dropzone-url-value="/preview"
        data-shared--dropzone-max-filesize-value="256"
      >
      <%= csrf.form_tag %>

      <!-- File input -->
      <div data-shared--dropzone-target="zone" class="border-2 border-dashed rounded-lg p-8 cursor-pointer">
        <img 
          src="public/assets/icons/files-folder.svg" 
          alt="Files icon" 
          class="h-12 w-12 mb-3 filter dark:invert"
        />
        <p class="mb-2 text-gray-700 dark:text-gray-300">
          Drag & drop files here (or click to browse)
        </p>
        <p class="text-xs text-gray-500 dark:text-gray-400">
          Accepted types: PNG, JPEG, GIF, TIFF, PSD, EPS, PDF, SVG
        </p>
        <div 
            data-shared--dropzone-target="previews" 
            class="mt-4 space-y-1 text-gray-700 dark:text-gray-300"
          ></div>
      </div>


      <!-- Engine -->
      <fieldset class="border border-gray-200 dark:border-gray-700 rounded-lg p-4">
        <legend class="px-2 text-gray-800 dark:text-gray-100 font-medium">Engine</legend>
        <div class="flex space-x-4 mt-2">
          <label class="inline-flex items-center">
            <input type="radio" name="engine" value="vips" checked class="form-radio text-blue-600 dark:text-blue-400">
            <span class="ml-2 text-gray-700 dark:text-gray-300">Vips</span>
          </label>
          <label class="inline-flex items-center">
            <input type="radio" name="engine" value="magick" class="form-radio text-blue-600 dark:text-blue-400">
            <span class="ml-2 text-gray-700 dark:text-gray-300">Magick</span>
          </label>
        </div>
      </fieldset>

      <!-- Format -->
      <fieldset class="border border-gray-200 dark:border-gray-700 rounded-lg p-4">
        <legend class="px-2 text-gray-800 dark:text-gray-100 font-medium">Format</legend>
        <div class="flex space-x-4 mt-2">
          <label class="inline-flex items-center">
            <input type="radio" name="format" value="png" checked class="form-radio text-blue-600 dark:text-blue-400">
            <span class="ml-2 text-gray-700 dark:text-gray-300">PNG</span>
          </label>
          <label class="inline-flex items-center">
            <input type="radio" name="format" value="jpeg" class="form-radio text-blue-600 dark:text-blue-400">
            <span class="ml-2 text-gray-700 dark:text-gray-300">JPEG</span>
          </label>
        </div>
      </fieldset>

      <!-- Colorspace -->
      <fieldset class="border border-gray-200 dark:border-gray-700 rounded-lg p-4">
        <legend class="px-2 text-gray-800 dark:text-gray-100 font-medium">Colorspace</legend>
        <div class="flex space-x-4 mt-2">
          <label class="inline-flex items-center">
            <input type="radio" name="colorspace" value="srgb" checked class="form-radio text-blue-600 dark:text-blue-400">
            <span class="ml-2 text-gray-700 dark:text-gray-300">sRGB</span>
          </label>
          <label class="inline-flex items-center">
            <input type="radio" name="colorspace" value="cmyk" class="form-radio text-blue-600 dark:text-blue-400">
            <span class="ml-2 text-gray-700 dark:text-gray-300">CMYK</span>
          </label>
        </div>
      </fieldset>

      <!-- Submit -->
      <div>
        <button
          type="submit"
          class="w-full bg-blue-600 dark:bg-blue-500 hover:bg-blue-700 dark:hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition-colors"
          data-index-target="submitPreview"
          data-shared--dropzone-target="submitFiles"
        >
          Generate Preview
        </button>
      </div>
    </form>

    <!-- CONVERTER FORM -->
    <form 
        action="/convert" 
        method="post" 
        enctype="multipart/form-data" 
        class="space-y-6 hidden" 
        data-index-target="converterForm"
      >
      <%= csrf.form_tag %>

      <!-- File input (same as above) -->
      <div 
          data-dropzone-target="zone"
          class="flex flex-col items-center justify-center border-2 border-dashed border-gray-300 
                rounded-lg p-8 cursor-pointer hover:border-gray-400 transition-colors"
        >
        <!-- replace this inline svg with your preferred “files” icon -->
        <img 
          src="public/assets/icons/files-folder.svg" 
          alt="Files icon" 
          class="h-12 w-12 mb-3 filter dark:invert"
        />

        <p class="text-white-500 mb-2">Drag & drop files here</p>
        <p class="text-white-400 text-sm">(or click to browse)</p>

        <!-- Hidden real file input -->
        <input 
          type="file" 
          name="files[]" 
          accept=".png,.jpg,.jpeg,.gif,.tif,.tiff,.psd,.eps,.svg" 
          multiple
          required
          data-dropzone-target="input"
          class="absolute inset-0 w-full h-full opacity-0 cursor-pointer"
        >
      </div>

      <!-- Engine -->
      <fieldset class="border border-gray-200 dark:border-gray-700 rounded-lg p-4">
        <legend class="px-2 text-gray-800 dark:text-gray-100 font-medium">Engine</legend>
        <div class="flex space-x-4 mt-2">
          <label class="inline-flex items-center">
            <input type="radio" name="engine" value="vips" checked class="form-radio text-blue-600 dark:text-blue-400">
            <span class="ml-2 text-gray-700 dark:text-gray-300">Vips</span>
          </label>
          <label class="inline-flex items-center">
            <input type="radio" name="engine" value="magick" class="form-radio text-blue-600 dark:text-blue-400">
            <span class="ml-2 text-gray-700 dark:text-gray-300">Magick</span>
          </label>
        </div>
      </fieldset>

      <!-- Hidden operation -->
      <input type="hidden" name="operation" value="convert">

      <!-- Submit -->
      <div>
        <button
          type="submit"
          class="w-full bg-green-600 dark:bg-green-500 hover:bg-green-700 dark:hover:bg-green-600 text-white font-semibold py-2 px-4 rounded-lg transition-colors"
          data-index-target="submitConvert"
        >
          Convert to PDF
        </button>
      </div>
    </form>
  </div>
</div>
